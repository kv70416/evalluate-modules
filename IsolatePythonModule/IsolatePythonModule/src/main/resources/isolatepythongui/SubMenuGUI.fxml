<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
    spacing="12.0"
>
    <padding>
        <Insets top="12.0" bottom="12.0" right="12.0" left="12.0" />
    </padding>
    <children>
        <Text
            text="Isolate Python Compilation Module"
            style="
                -fx-font-size: 16;
                -fx-font-weight: bold;
            "
        />
        
        <VBox
            spacing="8.0"
        >
            <padding>
                <Insets bottom="8.0"/>
            </padding>
            <children>
                <Text
                    text="Choose the executable of the ISOLATE sandboxing software:"
                />
                <HBox
                    alignment="CENTER_LEFT"
                    spacing="8.0"
                >
                    <Button text="Browse..." fx:id="isolateFileBrowseBtn" onAction="#openIsolateFileChooser" />
                    <Text
                        text="Chosen file: "
                    />
                    <Text fx:id="chosenIsolateFileText"
                        text="(no file chosen)"
                        style="
                            -fx-font-style: italic;
                        "
                    />
                </HBox>
            </children>
        </VBox>
        
        <VBox
            spacing="8.0"
        >
            <padding>
                <Insets bottom="8.0"/>
            </padding>
            <children>            
                <Text
                    text="Choose the Python executable file: "
                />
                <HBox
                    alignment="CENTER_LEFT"
                    spacing="8.0"
                >
                    <Button text="Browse..." fx:id="pythonFileBrowseBtn" onAction="#openPythonFileChooser" />
                    <Text
                        text="Chosen file: "
                    />
                    <Text fx:id="chosenPythonFileText"
                        text="(no file chosen)"
                        style="
                            -fx-font-style: italic;
                        "
                    />
                </HBox>
            </children>
        </VBox>
        
        <VBox
            spacing="8.0"
        >
            <children>            
                <HBox
                    alignment="CENTER_LEFT"
                    spacing="8.0"
                >
                    <Text
                        text="Main file path: "
                    />
                    <TextField fx:id="mainFileField" onKeyTyped="#readMainFileField" />
                </HBox>
            </children>
        </VBox>
        
    </children>
</VBox>